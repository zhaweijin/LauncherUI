<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget36"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/widget28"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/devices_manger"
            android:layout_width="fill_parent"
            android:background="@drawable/button_background"
            android:layout_height="120dip" >

            <TextView
                android:id="@+id/devices_manager_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="@string/devices_manager"
                android:textColor="@android:color/white"
                android:textSize="22sp" >
            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/horizontal_div"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_horizontal_div"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_install_apk_state"
            android:layout_width="fill_parent"
            android:background="@drawable/button_background"
            android:layout_height="120dip" >

            <LinearLayout
                android:id="@+id/widget32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="30dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/install_apk_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow_source"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" >
                </TextView>

                <TextView
                    android:id="@+id/install_apk_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/able_unknow_source"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" >
                </TextView>
            </LinearLayout>

            <CheckBox
                android:id="@+id/install_apk_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:layout_marginRight="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 >
            </CheckBox>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/horizontal_div"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_horizontal_div"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_check_apk_state"
            android:layout_width="fill_parent"
            android:background="@drawable/button_background"
            android:layout_height="120dip" >

            <LinearLayout
                android:id="@+id/widget32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="30dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/check_apk_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_app"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" >
                </TextView>

                <TextView
                    android:id="@+id/check_apk_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_app_message"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" >
                </TextView>
            </LinearLayout>

            <CheckBox
                android:id="@+id/check_apk_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:focusable="false"
                >
            </CheckBox>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/horizontal_div"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_horizontal_div"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>