<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget28"
    android:layout_width="927dip"
    android:layout_height="567dip"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/widget31"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/left"
            android:layout_width="235dip"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="73dip"
                android:layout_height="73dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="90dip"
                android:layout_marginTop="105dip"
                >
            </ImageView>

            <LinearLayout
                android:id="@+id/layout_install_button"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="268dip"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/install"
                    android:layout_width="217dip"
                    android:layout_height="60dip"
                    android:layout_gravity="right"
                    android:textSize="20sp"
                    android:background="@drawable/button_background"
                    android:text="@string/install"
                    android:textColor="@drawable/white" >
                </Button>
            </LinearLayout>
            
          <LinearLayout
                android:id="@+id/layout_progress"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_marginLeft="18dip"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="200dip"
                android:orientation="vertical" >
                <include
                    android:id="@+id/include_progress"
                    layout="@layout/download_progress" >
                </include>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="400dip"
            android:layout_marginTop="40dip"
            android:background="@drawable/market_information_vertical_dot"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/right"
            android:layout_width="692dip"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="60dip"
                android:textColor="@android:color/white"
                android:textSize="30sp" >
            </TextView>

            <TextView
                android:id="@+id/introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="20dip"
                android:maxLines="4"
                android:textColor="@android:color/white"
                android:textSize="17sp" >
            </TextView>

            <LinearLayout
                android:id="@+id/layout_gallery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:nextFocusLeft="@+id/install"
                android:orientation="vertical" >

                <Gallery
                    android:id="@+id/introduce_gallery"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                </Gallery>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>